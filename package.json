{
  "name": "devora",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun run --watch server/index.ts",
    "dev:client": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "start": "bun run server/index.ts",
    "preview": "bun run build && bun run start",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src server",
    "lint:fix": "eslint src server --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"server/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"server/**/*.ts\"",
    "version": "bun run scripts/version.ts",
    "prepare": "husky",
    "release": "bun run scripts/build-release.ts",
    "release:windows-x64": "bun run scripts/build-release.ts windows-x64",
    "release:macos-arm64": "bun run scripts/build-release.ts macos-arm64",
    "release:macos-x64": "bun run scripts/build-release.ts macos-x64",
    "release:linux-x64": "bun run scripts/build-release.ts linux-x64"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@happy-dom/global-registrator": "^20.0.11",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/react": "^16.3.1",
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.18",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "server/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@uiw/react-md-editor": "^4.0.11",
    "hono": "^4.11.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0",
    "uuid": "^13.0.0"
  }
}
