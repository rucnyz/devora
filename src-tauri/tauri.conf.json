{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Devora",
  "version": "0.1.3",
  "identifier": "io.github.rucnyz.devora",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev:frontend",
    "beforeBuildCommand": "bun run build:frontend"
  },
  "app": {
    "windows": [
      {
        "title": "Devora",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "dragDropEnabled": true,
        "zoomHotkeysEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhDQTVBQkZGMTVCNkIyQkMKUldTOHNyWVYvNnVsakpneXpndFVwcWF6TW9ZYkRPaXdwK1pwOXk4cENQNWU5WHVDMnBweEtDeHoK",
      "endpoints": [
        "https://github.com/rucnyz/devora/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
